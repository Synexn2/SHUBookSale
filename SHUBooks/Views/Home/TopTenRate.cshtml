@model IEnumerable<SHUBooks.Models.Book>

   
    <div class="panel panel-default">
        <div class="panel-heading">Top Ten Rated Books:</div>
        <div class="panel-body">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ISBN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Picture)
                    </th>
                    <th></th>
                </tr>
                
                @foreach (var item in (IEnumerable<SHUBooks.Models.Book>)ViewBag.TopTenRate)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.ISBN
                        </td>
                        <td>
                            @Html.Image("Picture", item.Picture, htmlAttributes: new { @width = "50", @height = "50" })
                        </td>
                        <td>
                          <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
